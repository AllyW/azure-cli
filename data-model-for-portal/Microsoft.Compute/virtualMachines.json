{
    "resourceType": "virtualMachines",
    "apiVersion": "2021_11_01",
    "learnMore": {
        "url": "https://docs.microsoft.com/en-us/cli/azure/vm?view=azure-cli-latest"
    },
    "commands": [
        {
            "name": "az vm show",
            "description": "Get the details of a VM",
            "confirmation": false,
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/en-us/cli/azure/vm?view=azure-cli-latest#az-vm-show"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--include-user-data]",
                            "[--name]",
                            "[--resource-group]",
                            "[--show-details]",
                            "[--subscription]" 
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Get the details of a VM in your resource group",
                    "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        },
        {
            "name": "az vm start",
            "description": "Start a stopped VM",
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/en-us/cli/azure/vm?view=azure-cli-latest#az-vm-start"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--name]",
                            "[--resource-group]",
                            "[--subscription]",
                            "[--no-wait]"
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Start a VM in your resource group",
                    "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}/start",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        },
        {
            "name": "az vm stop",
            "description": "Power off/stop a running VM",
            "confirmation": true,
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/en-us/cli/azure/vm?view=azure-cli-latest#az-vm-stop"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--name]",
                            "[--resource-group]",
                            "[--subscription]",
                            "[--skip-shutdown]",
                            "[--no-wait]"
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Stop a VM in your resource group",
                    "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}/powerOff",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        }
    ]
}