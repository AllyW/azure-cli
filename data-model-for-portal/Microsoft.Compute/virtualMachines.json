{
    "resourceType": "virtualMachines",
    "apiVersion": "2021-11-01",
    "learnMore": {
        "url": "https://docs.microsoft.com/cli/azure/vm"
    },
    "commands": [
        {
            "name": "az vm show",
            "description": "Get the details of a VM",
            "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}",
            "confirmation": false,
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/cli/azure/vm#az-vm-show"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--include-user-data]",
                            "[--name]",
                            "[--resource-group]",
                            "[--show-details]",
                            "[--subscription]"
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Get the details of a VM in your resource group",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        },
        {
            "name": "az vm start",
            "description": "Start a stopped VM",
            "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}/start",
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/cli/azure/vm#az-vm-start"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--name]",
                            "[--resource-group]",
                            "[--subscription]",
                            "[--no-wait]"
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Start a VM in your resource group",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        },
        {
            "name": "az vm stop",
            "description": "Power off/stop a running VM",
            "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}/powerOff",
            "confirmation": true,
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/cli/azure/vm#az-vm-stop"
                },
                "parameterSets":[
                    {
                        "parameters": [
                            "[--ids]",
                            "[--name]",
                            "[--resource-group]",
                            "[--subscription]",
                            "[--skip-shutdown]",
                            "[--no-wait]"
                        ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "Stop a VM in your resource group",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        },
        {
          "name": "az vm list",
          "description": "List details of Virtual Machines.",
          "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines",
          "confirmation": false,
          "help": {
            "learnMore": {
              "url": "https://docs.microsoft.com/cli/azure/vm#az-vm-list"
            },
            "parameterSets": [
              {
                "parameters": [
                  "[--resource-group]",
                  "[--show-details]",
                  "[--vmss]"
                ]
              }
            ]
          },
          "examples": [
            {
              "description": "List all VMs by resource group.",
              "parameters": [
                {
                  "name": "--subscription",
                  "value": "[path.subscriptionId]"
                },
                {
                  "name": "--resource-group",
                  "value": "[path.resourceGroupName]"
                }
              ]
            }
          ]
        },
        {
          "name": "az vm get-instance-view",
          "description": "Get instance information about a VM.",
          "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}?$expand=instanceView",
          "confirmation": false,
          "help": {
            "learnMore": {
              "url": "https://docs.microsoft.com/cli/azure/vm#az-vm-get-instance-view"
            },
            "parameterSets": [
              {
                "parameters": [
                  "[--ids]",
                  "[--name]",
                  "[--resource-group]",
                  "[--subscription]"
                ]
              }
            ]
          },
          "examples": [
            {
              "description": "Use a resource group and name to get instance view information of a VM.",
              "parameters": [
                {
                  "name": "--subscription",
                  "value": "[path.subscriptionId]"
                },
                {
                  "name": "--resource-group",
                  "value": "[path.resourceGroupName]"
                },
                {
                  "name": "--name",
                  "value": "[path.vmName]"
                }
              ]
            }
          ]
        },
        {
            "name": "az vm extension list",
            "description": "List the extensions attached to a VM",
            "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Compute/virtualMachines/{vmName}/extensions",
            "confirmation": false,
            "help": {
                "learnMore": {
                    "url": "https://docs.microsoft.com/cli/azure/vm/extension#az-vm-extension-list"
                },
                "parameterSets": [
                    {
                       "parameters": [
                          "[--resource-group]",
                          "[--vm-name]",
                          "[--subscription]"
                       ]
                    }
                ]
            },
            "examples": [
                {
                    "description": "List the extensions attached to a VM in your resource group",
                    "parameters": [
                        {
                            "name": "--resource-group",
                            "value": "[path.resourceGroupName]"
                        },
                        {
                            "name": "--vm-name",
                            "value": "[path.vmName]"
                        },
                        {
                            "name": "--subscription",
                            "value": "[path.subscriptionId]"
                        }
                    ]
                }
            ]
        }
    ]
}